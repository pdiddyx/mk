package lab.pkg12;
import java.util.Scanner;
public class Lab12 {
public static void main(String[] args) {
sumRev S=new sumRev(); //Creating object for sumRev Class
S.Calculation(); // Calling Calculation() function
}
}
class sumRev{ //Created another Class
void Calculation(){ //Member Function
int num,rem,sum=0,rev=0;
Scanner in=new Scanner(System.in);
System.out.println("ENTER THE NUMBER:");
num=in.nextInt();
while(num!=0)
{
rem=num%10;
sum=sum+rem;
rev=rem+(rev*10);
num=num/10;
}
System.out.println("SUM:"+sum);
System.out.println("REVERSE:"+rev);
}
}