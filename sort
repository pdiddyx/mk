package lab.n7;
import java.util.Arrays;
import java.util.Scanner;
class NumberSorter {
// Method to sort an array of numbers
public static void sortNumbers(int[] numbers) {
Arrays.sort(numbers);
}
}
public class LabN7 {
public static void main(String[] args) {
Scanner sc=new Scanner(System.in);
System.out.println("How many numbers need to be inserted: ");
int limit=sc.nextInt();
int[] numbers= new int[limit];
System.out.println("Enter the Elements:");
for(int i=0;i<limit;i++)
{
numbers[i]=sc.nextInt();
}
// Display the original array
System.out.println("Original Array: " + Arrays.toString(numbers));
// Use the NumberSorter class to sort the array
NumberSorter.sortNumbers(numbers);
// Display the sorted array
System.out.println("Sorted Array: " + Arrays.toString(numbers));
}
}